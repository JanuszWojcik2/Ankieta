@page
@model ProfileModel //IndexModel
@{
    ViewData["Title"] = "Profil";
    //ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "/Views/Shared/_Layout.cshtml";
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row mt-5 mb-3">
    <div class="bg-light rounded shadow p-3 mb-5  text-center">
        <img src="~/graphic/ikonaM.png" alt="logo portalu" class="mb-3" />
        <hr />
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <h2 class="oswald text-primary">Dane profilowe</h2>
            <div class="row">
                <div class="col-12 col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group mt-3">
                        <span class="input-group-text">
                            <h3 class="pt-1 mb-0">
                                <i class="bi-envelope-at-fill text-dark"></i>
                            </h3>
                        </span>
                        <div class="form-floating">
                            <input asp-for="Username" class="form-control" disabled />
                            <label asp-for="Username" class="form-label"></label>
                        </div>
                    </div>

                    <div class="input-group mt-3">
                        <span class="input-group-text">
                            <h3 class="pt-1 mb-0">
                                <i class="bi-person-fill text-dark"></i>
                            </h3>
                        </span>
                        <div class="form-floating">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
                            <label asp-for="Input.FirstName"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mt-3">
                        <span class="input-group-text">
                            <h3 class="pt-1 mb-0">
                                <i class="bi-person text-dark"></i>
                            </h3>
                        </span>
                        <div class="form-floating">
                            <input asp-for="Input.LastName" class="form-control" />
                            <label asp-for="Input.LastName"></label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mt-3">
                        <span class="input-group-text">
                            <h3 class="pt-1 mb-0">
                                <i class="bi-card-text text-dark"></i>
                            </h3>
                        </span>
                        <div class="form-floating">
                            <textarea asp-for="Input.Information" class="form-control" style="height: 120px"></textarea>
                            <label asp-for="Input.Information"></label>
                            <span asp-validation-for="Input.Information" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mt-3">
                        <span class="input-group-text">
                            <h3 class="pt-1 mb-0">
                                <i class="bi-telephone-fill text-dark"></i>
                            </h3>
                        </span>
                        <div class="form-floating">
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="card mt-3 text-start">
                        <div class="card-header">
                            <i class="bi-person-square fs-3 me-3"></i> <span class="text-secondary align-text-bottom">Wczytaj swoje zdjęcie lub wybierz awatara</span>
                        </div>
                        <div class="card-body text-center">
                            <div>
                                <img src="~/photo/mini/@((Model.Input.Photo != null) ? Model.Input.Photo : "user.png")" width="200" alt="Fotografia autora" class="img-fluid rounded">
                            </div>
                            <div class="mt-1">
                                <input type="file" name="avatar" id="avatar" class="form-control" accept=".jpg,.gif,.png" onchange="clearSex()" />
                                <span asp-validation-for="Input.Photo" class="text-danger"></span>
                            </div>
                            <div class="row mt-3">
                                <div class="col-6">
                                    <img src="~/photo/mini/woman.png" width="80" />
                                    <input type="radio" name="sex" id="sexW" value="woman" onclick="clearAvatar()" />
                                </div>
                                <div class="col-6">
                                    <img src="~/photo/mini/man.png" width="80" />
                                    <input type="radio" name="sex" id="sexM" value="man" onclick="clearAvatar()" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="row my-3">
                <div class="col-6 ">
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary rounded-pill shadow">Zapisz zmiany</button>
                </div>

                <div class="col-6">
                    <a asp-controller="Home" asp-action="Index" class="w-100 btn btn-lg btn-outline-secondary rounded-pill shadow">Zrezygnuj</a>
                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function clearAvatar(){
            avatar.value="";
        }

        function clearSex(){
            sexW.checked = false;
            sexM.checked = false;
        }
    </script>
}
