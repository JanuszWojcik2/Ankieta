@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="row my-5">
    <div class="rounded bg-light shadow text-center p-3 col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
        <img src="~/graphic/ikonaM.png" alt="logo portalu" class="mb-2" />
        <hr />
        <section>
            <form id="account" method="post">
                <h2 class="oswald text-primary">Logowanie</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mt-3">
                    <span class="input-group-text login_icon">
                        <i class="bi-envelope-at-fill"></i>
                    </span>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Nazwa (e-mail)" />
                        <label asp-for="Input.Email" class="form-label"></label>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <div class="input-group mt-3">
                    <span class="input-group-text login_icon">
                        <i class="bi-shield-lock-fill"></i>
                    </span>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Hasło" />
                        <label asp-for="Input.Password" class="form-label"></label>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <div class="text-start mt-2">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 my-2 btn btn-lg btn-primary">Zaloguj się</button>
                </div>
                <hr />
                <div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="w-100 btn btn btn-light">Nie pamiętam hasła</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="w-100 btn btn btn-light">Nie mam konta, chcę się zarejestrować</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="w-100 btn btn btn-light">Prześlij ponownie potwierdzenie rejestracji</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
